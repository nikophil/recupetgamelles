{%- block form_row -%}
    <div class="control-group {% if form.vars.errors|length > 0 %}error{% endif %}">
        {{ form_label(form) }}
        <div class="controls">
            {{ form_widget(form) }}
            {{ form_errors(form) }}
        </div>
    </div>
{%- endblock form_row -%}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        <p class="help-block">
            {%- for error in errors -%}
                {{ error.message }}<br>
            {%- endfor -%}
        </p>
    {%- endif -%}
{%- endblock form_errors -%}