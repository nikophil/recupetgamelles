{% extends 'admin/base.html.twig' %}

{% set rubric = 'home' %}

{% block content %}
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-home"></i>
                <h3>Administration des textes de la page d'accueil</h3>
            </div>
            <div class="widget-content">
                {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
                <fieldset>
                    <div class="control-group">
                        {{ form_label(form.content, 'Contenu de la home', {label_attr : {class : 'control-label'}} ) }}
                        <div class="controls">
                            {{ form_widget(form.content, {attr: {class: 'textarea'}}) }}
                        </div>
                    </div>
                    <div class="form-actions">
                        <button class="btn btn-primary" type="submit">Enregistrer</button>
                        <a class="btn" href="{{ path('admin_dashboard') }}">Annuler</a>
                    </div>
                </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}

{% block jsBottom %}
    {{ parent() }}
    <script>
        CKEDITOR.replace('admin_home_content');
    </script>
{% endblock jsBottom %}