<body>

{% set rubric = rubric|default('home') %}

{% include 'admin/header.html.twig' %}

<div class="main">
    <div class="main-inner">
        <div class="container">
            {% if app.session.flashBag.has('success') %}
                <div class="row">
                    <div class="span12">
                        <div class="alert alert-success">
                            {% for message in app.session.flashBag.get('success') %}
                                {{ message }}<br>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
            {% if app.session.flashBag.has('error') %}
                <div class="row">
                    <div class="span12">
                        <div class="alert alert-error">
                            {% for message in app.session.flashBag.get('error') %}
                                {{ message }}<br>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}

            <div class="row">
                {% block content %}
                    default content
                {% endblock content %}
            </div>
            <!-- /row -->
        </div>
        <!-- /container -->
    </div>
    <!-- /main-inner -->
</div>
<!-- /main -->

{% include 'admin/footer.html.twig' %}

{% block jsBottom %}
    <script src="{{ asset("js/admin/jquery-1.7.2.min.js") }}"></script>
    <script src="{{ asset('js/admin/excanvas.min.js') }}"></script>
    <script src="{{ asset('js/admin/chart.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('js/admin/bootstrap.js') }}"></script>
    <script src="//cdn.ckeditor.com/4.5.7/standard/ckeditor.js"></script>
    <script language="javascript" type="text/javascript" src="{{ asset('js/admin/full-calendar/fullcalendar.min.js') }}"></script>
    <script src="{{ asset('js/admin/base.js') }}"></script>
{% endblock jsBottom %}
</body>
</html>
