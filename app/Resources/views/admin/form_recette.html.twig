{% extends 'admin/base.html.twig' %}

{% set rubric = 'recettes' %}

{% block content %}
    <div class="span12">
        <div class="widget">
            <div class="widget-header">
                <i class="icon-calendar"></i>
                <h3>
                    {% if app.request.get('_route') in ['admin_recette_edit'] %}
                        Modifier
                    {% else %}
                        Cr√©er
                    {% endif %}
                    une recette</h3>
            </div>
            <div class="widget-content">
                {{ form_start(form, {attr: {class: 'form-horizontal'}}) }}
                    <fieldset>
                        {{ form_row(form.name) }}
                        {{ form_row(form.category) }}
                        {{ form_row(form.position) }}
                        {{ form_row(form.pdf) }}
                        {{ form_row(form.active) }}
                        <div class="form-actions">
                            <button class="btn btn-primary" type="submit">Enregistrer</button>
                            <a class="btn" href="{{ path('admin_recettes') }}">Annuler</a>
                        </div>
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}
